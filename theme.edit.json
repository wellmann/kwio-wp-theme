{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "useRootPaddingAwareAlignments": true,
    "color": {
      "custom": false,
      "customDuotone": false,
      "customGradient": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "duotone": null,
      "gradients": [],
      "link": true,
      "palette": []
    },
    "layout": {
      "contentSize": "",
      "wideSize": ""
    },
    "spacing": {
      "blockGap": true,
      "margin": false,
      "padding": false,
      "customSpacingSize": false,
      "spacingSizes": []
    },
    "typography": {
      "customFontSize": false,
      "fontStyle": false,
      "fontWeight": false,
      "fluid": true,
      "letterSpacing": false,
      "lineHeight": false,
      "textDecoration": false,
      "textTransform": false,
      "dropCap": false,
      "fontSizes": [],
      "fontFamilies": []
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": false
        },
        "color": {
          "background": false,
          "text": false
        }
      },
      "core/columns": {
				"spacing": {
          "margin": true,
          "padding": true
				}
			},
      "core/column": {
				"spacing": {
          "padding": true
				}
			},
      "core/group": {
				"spacing": {
          "margin": true
				}
			},
      "core/paragraph": {
        "color": {
          "background": false
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--custom--color--background)",
      "text": "var(--wp--custom--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--base)",
      "lineHeight": "1.4"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--600)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--500)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--400)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--300)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--200)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--100)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--custom--color--link)"
        },
        "typography": {
          "textDecoration": "underline"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--custom--color--link)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--custom--color--link)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":visited": {
          "color": {
            "text": "var(--wp--custom--color--link)"
          }
        }
      }
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--100)",
      "padding": {
        "right": "20px",
        "left": "20px"
      }
    }
  }
}